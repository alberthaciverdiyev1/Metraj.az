<div class="w-full">
    <div class="flex mx-auto max-w-screen-3xl px-4 lg:px-6 xl:px-8 gap-9">

        <aside class="hidden xl:block w-[160px] mt-8">
            <div class="sticky top-24">
                <img src="https://placehold.co/200x1300" alt="Sol Reklam" class="rounded-lg shadow w-full"/>
            </div>
        </aside>


        <main class="w-full">
            {{>Component.Breadcrumb items=breadcrumbs}}

            {{>Component.ScrollTop}}

            <section class="bg-white p-6 max-w-full mx-auto relative z-10"
                     x-data="{ categoryOpen: false, cityOpen: false, addressOpen: false ,buildingTypesOpen:false}">
                <div class="flex justify-between items-center mb-3">
                    <div class="flex gap-2 border border-gray-200 rounded-lg">
                        <button class="px-4 py-2 rounded-lg font-semibold text-gray-100 bg-[color:var(--primary)] hover:bg-gray-100">
                            {{t "Sale"}}</button>
                        <button class="px-4 py-2 rounded-lg font-semibold text-gray-700 hover:bg-gray-100">{{t
                                "Rent"}}</button>
                    </div>

                    <button class="px-4 py-1 border border-gray-300 rounded-lg hover:bg-gray-100">
                        <i class="bi bi-arrow-clockwise text-lg text-gray-600"></i>
                    </button>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-4 gap-4">


                    <div class="relative p-3 bg-white rounded-lg border border-gray-200 cursor-pointer"
                         @click="buildingTypesOpen = !buildingTypesOpen; addressOpen = false; cityOpen = false,categoryOpen = false">
                        <div class="flex items-center justify-between">
                            <div class="flex items-center gap-2">
                                <i class="bi bi-buildings text-orange-500 text-xl"></i>
                                <span class="text-gray-700">Building Type</span>
                            </div>
                            <i class="bi bi-chevron-down text-orange-500"></i>
                        </div>
                        <template x-if="buildingTypesOpen">
                            <div
                                    class="absolute left-0 mt-2 w-full bg-white shadow-lg border border-gray-200 rounded-lg z-10">
                                <ul class="divide-y divide-gray-100">
                                    {{#each data.buildingTypes}}
                                        <li class="p-2 hover:bg-gray-100 cursor-pointer"
                                            data-value="{{this.key}}">{{this.label}}</li>
                                    {{/each}}
                                </ul>
                            </div>
                        </template>
                    </div>
                    <div class="relative p-3 bg-white rounded-lg border border-gray-200 cursor-pointer"
                         @click="categoryOpen = !categoryOpen; addressOpen = false; cityOpen = false">
                        <div class="flex items-center justify-between">
                            <div class="flex items-center gap-2">
                                <i class="bi bi-currency-dollar text-orange-500 text-xl"></i>
                                <span class="text-gray-700">{{t "Price"}} (AZN)</span>
                            </div>
                            <i class="bi bi-chevron-down text-orange-500"></i>
                        </div>
                        <template x-if="categoryOpen">
                            <div
                                    class="absolute left-0 mt-2 w-full bg-white shadow-lg border border-gray-200 rounded-lg z-10">
                                <div class="flex gap-2">
                                    <input type="number" placeholder="Min qiymət"
                                           class="w-1/2 px-3 py-2 bg-white border border-gray-300 rounded-lg focus:outline-none"/>
                                    <input type="number" placeholder="Max qiymət"
                                           class="w-1/2 px-3 py-2 bg-white border border-gray-300 rounded-lg focus:outline-none"/>
                                </div>
                            </div>
                        </template>
                    </div>



                    <div class="relative p-3 bg-white rounded-lg border border-gray-200 cursor-pointer"
                         @click="cityOpen = !cityOpen; addressOpen = false; categoryOpen = false">
                        <div class="flex items-center justify-between">
                            <div class="flex items-center gap-2">
                                <i class="bi bi-buildings text-orange-500 text-xl"></i>
                                <span class="text-gray-700">All Cities</span>
                            </div>
                            <i class="bi bi-chevron-down text-orange-500"></i>
                        </div>
                        <template x-if="cityOpen">
                            <div
                                    class="absolute left-0 mt-2 w-full bg-white shadow-lg border border-gray-200 rounded-lg z-10">
                                <ul class="divide-y divide-gray-100">
                                    {{#each cities}}
                                        <li class="p-2 hover:bg-gray-100 cursor-pointer"
                                            value="{{this.id}}">{{this.name}} </li>
                                    {{/each}}

                                </ul>
                            </div>
                        </template>

                    </div>

                    <div class="flex flex-col  gap-2 md:flex-row md:items-end w-full">
                        <div x-data="filterModal()" @keyup.escape.window="open = false">
                            <button @click="open = true"
                                    class=" w-full flex items-center gap-1px-4 px-6 py-4 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-100  md:w-auto hover:text-[color:var(--primary)] transition">
                                <i class="fa-solid fa-sliders"></i>
                            </button>
                            {{>Component.FilterModal}}


                        </div>
                        <button class="px-25 py-3  bg-black text-white rounded-lg hover:bg-gray-800 w-full md:w-auto">
                            Search
                        </button>
                    </div>

                </div>
            </section>
            <section class="property-listing py-4">
                <div class="container mx-auto px-4">


