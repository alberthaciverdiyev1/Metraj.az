{{>Component.Breadcrumb items=breadcrumbs}}

{{>Component.ScrollTop}}

<section id="side" class="pt-10" data-agency-id="{{ agency.id }}">
    
    <div class="container mx-auto px-4 ">
        <div class="side-agency">
            <section class="side-left">
                <div class="agencies-header">

                    <img src="{{ agency.background_image }}" alt="">
                    <div class="agency-header-info">
                        <div class="logo">
                            <img src="{{ agency.profile_image }}" alt="Logo">
                        </div>
                        <div>
                            <h2 class="text-2xl font-bold flex items-center gap-2">
                                {{ agency.name }}
                                {{#if agency.is_premium}}
                                <span
                                    class="premium-label flex items-center bg-yellow-400 text-white text-xs font-bold px-2 py-1 rounded-full">
                                    <i class="bi bi-star-fill mr-1"></i> {{t "Premium"}}
                                </span>
                                {{/if}}
                            </h2>
                            <div class="mt-4">
                                {{#unless agency.is_premium}}
                                <button id="makePremiumBtn" data-agency-id="{{agency.id}}"
                                    class="bg-orange-400 text-white px-3 py-1 rounded text-sm hover:bg-[#F1913D] transition">
                                    {{t "Premium et"}}
                                </button>
                                {{/unless}}
                            </div>
                            <p class="text-gray-600">
                                <i class="bi bi-geo-alt"></i>
                                {{ agency.address }}
                            </p>

                        </div>
                    </div>
                </div>
                <div>

                </div>
                <div class="agencies-info">
                    <h2>{{t "About"}}{{ agency.name }}</h2>
                    <p>{{ agency.short_description }}</p>
                    <h2 class="title">{{t "Location"}}</h2>
                </div>
                {{> Component.FeaturedProperties}}

                <div class="listing-tab mt-5">
                    <div class="listing-tab-header flex flex-col md:flex-row justify-between items-center mb-4">
                        <h2 class="title text-gray-700 text-lg md:text-xl font-semibold">{{t "Our properties"}}</h2>

                        <div class="tab-buttons flex gap-3 mt-3 md:mt-0">
                            <button class="tab-btn active px-4 py-2 rounded-md border hover:bg-gray-200 transition"
                                data-filter="all">{{t "All"}}</button>
                            <button class="tab-btn px-4 py-2 rounded-md border hover:bg-gray-200 transition"
                                data-filter="rent">{{t "For rent"}}</button>
                            <button class="tab-btn px-4 py-2 rounded-md border hover:bg-gray-200 transition"
                                data-filter="sale">{{t "For sale"}}</button>
                        </div>
                    </div>

                    <div id="related-properties"
                        class="pt-8 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-3 gap-7 min-h-[300px]">
                    </div>



