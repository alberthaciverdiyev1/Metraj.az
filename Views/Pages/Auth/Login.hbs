<div class="relative flex items-center lg:h-screen justify-center bg-cover bg-center py-4"
     style="background-image: url('/images/login-bg.svg');">
    <div class="absolute inset-0 bg-[#F1913D] opacity-80"></div>

    <div
        class="flex flex-col md:flex-row justify-center md:w-[85%] w-[90%] items-center gap-[30px] xl:gap-[20px] lg:gap-[15px] lg:h-full relative z-10">
        
        <!-- Left side -->
        <div class="flex md:flex-col flex-row items-center justify-center h-full gap-[20px] md:gap-[10px] h-auto lg:h-full">
            <h1
                class="text-white text-[26px] font-bold xl:text-[40px] xl:w-[340px] text-center mb-4 lg:text-[30px] md:text-[22px] md:w-[200px] lg:w-[250px]">
                {{t "Find your ideal house"}}</h1>
            <img src="/images/illustation.svg" class="w-[180px] xl:w-[250px] lg:w-[200px] md:w-[150px]">
        </div>

        <!-- Login form -->
        <div
            class="w-full h-auto lg:h-full md:w-1/3 p-6 md:p-8 justify-center flex flex-col bg-white rounded-[15px] shadow-lg">

            <h2 class="text-2xl font-semibold text-gray-800 mx-auto">{{t "Sign in"}}</h2>

            <form id="login-form" class="space-y-0">
                <div class="input-with-icon mt-[10px]">
                    <input type="email" name="email" id="email" required placeholder="Mail address or username"
                        class="w-full border rounded-xl px-4 py-3 pl-12">
                    <span id="email-error" class="text-red-500 text-sm block mt-1"></span>
                </div>

                <div class="input-with-icon mt-[10px]">
                    <input type="password" name="password" id="password" required placeholder="Password"
                        class="w-full border rounded-xl px-4 py-3 pl-12">
                    <span id="password-error" class="text-red-500 text-sm block mt-1"></span>
                </div>

                <button type="submit" id="login-btn"
                    class="w-full bg-[var(--primary)] hover:bg-orange-600 text-white font-semibold py-4 rounded-xl transition duration-300 mt-4">
                    {{t "Log In"}}
                </button>
            </form>

            <div class="divider flex items-center justify-center my-6">
                <hr class="w-1/5 border-gray-300" />
                <span class="mx-2 text-gray-500 text-sm text-center">{{t "If you have not account"}}</span>
                <hr class="w-1/5 border-gray-300" />
            </div>

            <a href="/register"
                class="w-full bg-[var(--primary)] text-center hover:bg-[#F1913D] hover:text-white text-[#F1913D] bg-white border border-gray font-semibold py-4 rounded-xl transition duration-300">
                {{t "Register"}}
            </a>

            <div class="divider flex items-center justify-center my-6">
                <hr class="w-1/5 border-gray-300">
                <span class="mx-2 text-gray-500 text-sm text-center">{{t "Also you can log in with"}}</span>
                <hr class="w-1/5 border-gray-300">
            </div>

            <div class="social-buttons flex justify-between w-[70%] m-auto">
                <a href="#"><img src="/images/devicon_google.svg"></a>
                <a href="#"><img src="/images/logos_facebook.svg"></a>
                <a href="#"><img src="/images/logos_apple.svg"></a>
                <a href="#"><img src="/images/logos_telegram.svg"></a>
            </div>

            <div class="text-center mt-4">
                <a href="/" class="text-sm text-orange-400 hover:underline">{{t "Ana səhifəyə qayıt"}}</a>
            </div>
        </div>

        <!-- Right side -->
        <div class="flex md:flex-col flex-row items-center justify-center h-full text-center  lg:h-full">
            <h1
                class="text-white text-[26px] font-bold xl:text-[40px] xl:w-[400px] mb-4 lg:text-[30px] md:text-[22px] md:w-[220px] lg:w-[300px]">
               {{t " Easiest way to find your safezone"}}
            </h1>
            <img src="/images/ok-finger.svg" alt="ok-icon" class="w-[180px] xl:w-[250px] lg:w-[200px] md:w-[150px]">
        </div>
    </div>
</div>
