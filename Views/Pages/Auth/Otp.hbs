<div class="">
    <div class="login">
{{!-- 
        {{> Component.Auth.LeftSection logo="https://harnishdesign.net/demo/html/oxyy/images/logo-teal.png"
                subtitle="We are glad to see you again!"
                title="Join the largest Designer community in the world."}} --}}


        <div class="otp-right max-w-7xl flex justify-center items-center h-screen  mx-auto">
            <div class="card">
                <h2 class="text-center"       >{{t "Two-Step Verification"}}</h2>
                <figure class="flex justify-center items-center">
                 <img   src="https://harnishdesign.net/demo/html/oxyy/images/otp-icon.png" alt="Phone Icon" class="icon center" />    
                </figure>
               
                <p>{{t "Please enter the OTP (one time password) to verify your account. A Code has been sent to"}} <strong>+1 ******179</strong></p>
                <form>
                    <label for="otp">{{t "Enter 4 digit code"}}</label>
                    <div class="otp-inputs">
                        <input type="number" maxlength="1" min="0" max="9" />
                        <input type="number" maxlength="1" min="0" max="9" />
                        <input type="number" maxlength="1" min="0" max="9" />
                        <input type="number" maxlength="1" min="0" max="9" />
                    </div>


                    <div class="form-footer">
                        <button type="submit" class="verify-btn bg-[var(--primary)] w-[40%]">{{t "Verify"}}</button>
                        <div class="">
                            <p class="resend">{{t "Didn't get the code?"}} <a href="#">{{t "Resend it"}}</a></p>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
