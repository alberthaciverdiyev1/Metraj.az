<div class="container gap-6 flex mx-auto px-4 py-[100px]">    <!-- Sidebar -->
        {{> Profile.sidebar activePage="profile"}}
    

    <!-- Main Content -->
    <div class="bg-white  rounded-xl flex-1 px-4 md:px-6 lg:px-7 py-6 shadow-xl w-full">
        <!-- Account Settings Header -->
        <div class="lg:flex flex-col hidden">
            <h2 class="text-2xl md:text-3xl font-bold text-gray-800">Account Settings</h2>

            <div class="box px-3 py-3 border mt-3 border-gray-200 rounded-xl">
                <h4 class="font-bold mt-2 text-lg">Agent Account</h4>
                <p class="bg-[#FFF3CD] py-3 px-4 text-base text-gray-600 mt-2 rounded-lg">
                    Your current account type is set to agent. If you want to remove your agent account
                    and return to a normal account, click the button below.
                </p>
                <button class="rounded-xl bg-[var(--primary)] mt-6 px-4 py-3 text-white min-w-[300px]">
                    Remove Agent Account
                </button>
            </div>
        </div>


        <!-- Profile Button (Mobile only) -->
        <div class="flex justify-center mt-4 md:hidden ">
            <button
                class="w-full flex justify-between items-center border rounded-lg px-4 py-3 bg-white text-[#f1913d] font-medium">
                <span class="flex items-center gap-2">
                    <i class="bi bi-person"></i>
                    Profile
                </span>
                <i class="bi bi-chevron-down"></i>
            </button>
        </div>

        <!-- Profile Button (Desktop - only icon) -->
        <div class="hidden lg:flex justify-center mt-4">
            <button
                class="flex lg:hidden items-center px-3 py-2 rounded-xl border-2 border-[var(--primary)] text-[var(--primary)] font-medium">
                <i class="bi bi-person"></i>
            </button>
        </div>

        <!-- Background Section -->
        <div class="relative bg-gray-400 rounded-xl h-32  items-center justify-center mt-6 lg:hidden flex">
            <h3 class="text-white font-bold  ">Background</h3>
            <!-- Edit Icon -->
            <button class="absolute top-2 right-2 bg-white p-2 rounded-full shadow">
                <i class="bi bi-pencil text-gray-700"></i>
            </button>
            <!-- Avatar -->
            <div class="absolute -bottom-10 right-1.5/2 transform -translate-x-1/2">
                <img class="w-20 h-20 rounded-full border-4 border-white shadow-lg"
                    src="https://themesflat.co/html/proty/images/avatar/account.jpg" alt="avatar">
            </div>
        </div>

        <!-- Avatar Upload -->
        <div class="py-6 mt-10">
            <h3 class="text-lg font-bold">Avatar</h3>
            <div class="flex items-center mt-4 gap-6">
                <img class="w-[100px] h-[100px] rounded-full object-cover shadow"
                    src="https://themesflat.co/html/proty/images/avatar/account-2.jpg" alt="poster">
                <div class="flex flex-col">
                    <p class="text-gray-500">Upload a new avatar</p>
                    <input class="border mt-3 border-gray-200 px-2 py-2 rounded-lg w-full" type="file">
                </div>
            </div>
        </div>

        <!-- Poster Upload -->
        <div class="py-6">
            <h3 class="text-lg font-bold">Agent Poster</h3>
            <div class="flex flex-col md:flex-row items-center mt-4 gap-6">
                <img class="w-[330px] h-[200px] rounded-lg shadow"
                    src="https://themesflat.co/html/proty/images/avatar/account-2.jpg" alt="poster">
                <div class="flex flex-col">
                    <p class="text-gray-500">Upload a new poster</p>
                    <input class="border mt-3 border-gray-200 px-2 py-2 rounded-lg w-full" type="file">
                </div>
            </div>
        </div>


        <div class="py-4">
            <h3 class="text-lg font-bold">Information</h3>

            <!-- Full name -->
            <div class="flex flex-col gap-2 mt-2">
                <label class="text-sm" for="fullname">Full name:*</label>
                <input class="py-3 border border-gray-200 px-2 rounded-lg w-full" type="text" name="fullname"
                    value="Demo Agent">
            </div>

            <!-- Description -->
            <div class="flex flex-col gap-2 mt-4">
                <label class="text-sm" for="description">Description:*</label>
                <textarea name="description" rows="5"
                    class="resize-y rounded-lg border border-gray-300 py-4 px-5 w-full">
Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Lorem ipsum dolor sit amet consectetur adipisicing elit. Velit, itaque.
        </textarea>
            </div>

            <!-- Grid inputs -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-6">
                <div>
                    <label class="text-sm font-medium block mb-1">Your Company:*</label>
                    <input type="text" class="w-full border border-gray-300 rounded-lg px-3 py-2"
                        placeholder="Your Company">
                </div>
                <div>
                    <label class="text-sm font-medium block mb-1">Position:*</label>
                    <input type="text" class="w-full border border-gray-300 rounded-lg px-3 py-2"
                        placeholder="Position">
                </div>
                <div>
                    <label class="text-sm font-medium block mb-1">Office Number:*</label>
                    <input type="text" class="w-full border border-gray-300 rounded-lg px-3 py-2" value="1332565894">
                </div>
                <div>
                    <label class="text-sm font-medium block mb-1">Office Address:*</label>
                    <input type="text" class="w-full border border-gray-300 rounded-lg px-3 py-2"
                        value="10 Bringhurst St, Houston, TX">
                </div>
                <div>
                    <label class="text-sm font-medium block mb-1">Job:*</label>
                    <input type="text" class="w-full border border-gray-300 rounded-lg px-3 py-2" value="Realtor">
                </div>
                <div>
                    <label class="text-sm font-medium block mb-1">Email address:*</label>
                    <input type="email" class="w-full border border-gray-300 rounded-lg px-3 py-2"
                        value="themeflat@gmail.com">
                </div>
                <div>
                    <label class="text-sm font-medium block mb-1">Your Phone:*</label>
                    <input type="text" class="w-full border border-gray-300 rounded-lg px-3 py-2" value="1332565894">
                </div>
                <div class="md:col-span-2">
                    <label class="text-sm font-medium block mb-1">Location:*</label>
                    <input type="text" class="w-full border border-gray-300 rounded-lg px-3 py-2"
                        value="634 E 236th St, Bronx, NY 10466">
                </div>
                <div>
                    <label class="text-sm font-medium block mb-1">Facebook:*</label>
                    <input type="text" class="w-full border border-gray-300 rounded-lg px-3 py-2" value="#">
                </div>
                <div>
                    <label class="text-sm font-medium block mb-1">Twitter:*</label>
                    <input type="text" class="w-full border border-gray-300 rounded-lg px-3 py-2" value="#">
                </div>
                <div>
                    <label class="text-sm font-medium block mb-1">LinkedIn:*</label>
                    <input type="text" class="w-full border border-gray-300 rounded-lg px-3 py-2" value="#">
                </div>
            </div>

            <!-- Save button -->
            <div class="mt-6">
                <button class="bg-[var(--primary)] text-white px-6 py-3 rounded-xl hover:bg-orange-600 transition">
                    Save & Update
                </button>
            </div>
        </div>

        <div class="py-4">
            <h3 class="text-lg font-bold">Change Password</h3>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-2 w-full">
                <div class="flex flex-col gap-2 relative">
                    <label for="old-password" class="text-sm font-bold">Old password*</label>
                    <input type="password" name="old" id="old-password"
                        class="border border-gray-200 rounded-2xl px-3 py-3 pr-10 w-full" placeholder="password">
                    <i class="bi bi-eye text-xl text-gray-600 absolute top-2/3 right-3 transform -translate-y-1/2 cursor-pointer"
                        id="old-eye"></i>
                </div>

                <div class="flex flex-col gap-2 relative">
                    <label for="new-password" class="text-sm font-bold">New password*</label>
                    <input type="password" name="new" id="new-password"
                        class="border border-gray-200 rounded-2xl px-3 py-3 pr-10 w-full" placeholder="password">
                    <i class="bi bi-eye text-xl text-gray-600 absolute top-2/3 right-3 transform -translate-y-1/2 cursor-pointer"
                        id="new-eye"></i>
                </div>

                <div class="flex flex-col gap-2 relative">
                    <label for="confirm-password" class="text-sm font-bold">Confirm password*</label>
                    <input type="password" name="confirm" id="confirm-password"
                        class="border border-gray-200 rounded-2xl px-3 py-3 pr-10 w-full" placeholder="password">
                    <i class="bi bi-eye text-xl text-gray-600 absolute top-2/3 right-3 transform -translate-y-1/2 cursor-pointer"
                        id="confirm-eye"></i>
                </div>
            </div>

            <div class="mt-6">
                <button class="bg-[var(--primary)] text-white px-6 py-3 rounded-xl hover:bg-orange-600 transition">
                    Save & Update
                </button>
            </div>
        </div>






    </div>



</div>




</div>