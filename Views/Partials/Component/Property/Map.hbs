<div class="map-detail">
  <div class="map">
    {{!-- {{#if google_map_url}}
      <iframe
        src="{{google_map_url}}"
        width="100%"
        height="450"
        style="border-radius:24px;"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
      >
      </iframe> --}}
    <iframe class="grid md:hidden w-full h-full"
      src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d194473.18588939894!2d49.8549596!3d40.394592499999995!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40307d6bd6211cf9%3A0x343f6b5e7ae56c6b!2sBaku!5e0!3m2!1sen!2saz!4v1759252822258!5m2!1sen!2saz"
      width="600"
      height="450"
      style="border:0;"
      allowfullscreen=""
      loading="lazy"
      referrerpolicy="no-referrer-when-downgrade"
    ></iframe>
    {{!-- {{else}}
      <div class="map-placeholder">
        <p>Map location not available</p>
      </div>
    {{/if}} --}}
  </div>
  <div class="map-info px-4 ">
    <ul class="map-info-list">
      <li class="flex map-flex">
        <p>Address</p>
        <p>{{location.address}}</p>
      </li>
      <li class="flex map-flex">
        <p>City</p>
        <p>{{location.city.name}}</p>
      </li>
      <li class="flex map-flex">
        <p>State/Region</p>
        <p>{{location.district.name}}</p>
      </li>
    </ul>
  </div>
</div>