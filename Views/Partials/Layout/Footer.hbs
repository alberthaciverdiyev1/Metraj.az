{{#ifNo isProduction}}
    <div id="loadTimer"
         class="fixed bottom-4 right-4 bg-black bg-opacity-70 text-white px-3 py-1.5 rounded-md text-xs z-50 font-sans">
        Loading
    </div>
{{/ifNo}}

<!-- Header -->
<header class="bg-[#2C2E33] px-4 py-3 md:py-4 border-b border-[#3a3a3d] text-white">
    <div class="max-w-7xl mx-auto flex flex-col md:flex-row md:justify-between md:items-center gap-3">

        <!-- Logo -->
        <a href="/" class="flex items-center gap-2 md:gap-3">
            <img src="/images/metrajlogo1-remove.png" alt="Logo" class="h-7 md:h-8 object-contain"/>
            <div class="leading-tight">
                <div class="text-sm md:text-md font-extrabold text-[#a7a5a5] tracking-tight">Metraj.az</div>
                <div class="text-[8px] md:text-[9px] text-gray-400 uppercase tracking-[0.2em] underline underline-offset-3">
                    sənin əmlakın
                </div>
            </div>
        </a>

        <!-- Contact Info -->
        <div class="flex items-center gap-3 md:gap-5">
            <div class="flex items-center gap-2 md:gap-3 border-r border-[#3B3D41] pr-3 md:pr-5">
                <i class="bi bi-telephone text-[#F7923A] text-lg md:text-xl"></i>
                <div class="text-xs md:text-sm">
                    <p class="text-gray-400">Call us</p>
                    {{#if setting.phone}}
                        <p class="font-semibold text-white">{{setting.phone}}</p>
                    {{/if}}
                </div>
            </div>
            <div class="flex items-center gap-2 md:gap-3">
                <i class="bi bi-envelope text-[#F7923A] text-lg md:text-xl "></i>
                <div class="text-xs md:text-sm">
                    <p class="text-gray-400">Need live help</p>
                    {{#if setting.email}}
                        <p class="font-semibold text-white max-w-[150px] break-all">{{setting.email}}</p>

                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</header>

<footer class="bg-[#2C2E33] text-[#d1d5db] px-6 py-6 md:py-8 font-sans">
    <div class="max-w-7xl mx-auto flex flex-col md:flex-row justify-between items-center gap-6">

        <!-- Pages -->
        <div class="flex flex-wrap gap-6 text-sm md:gap-8 items-center">
            <a href="/contact" class="hover:text-[var(--primary)] transition-colors duration-300">Contact</a>
            <a href="/property" class="hover:text-[var(--primary)] transition-colors duration-300">Listing</a>
            <a href="/agencies" class="hover:text-[var(--primary)] transition-colors duration-300">Agencies</a>
            <a href="/blog" class="hover:text-[var(--primary)] transition-colors duration-300">Blog</a>
        </div>

        <!-- Quick Links -->
        <div class="flex flex-wrap gap-6 text-sm md:gap-8 items-center">
            <a href="/property" class="hover:text-[var(--primary)] transition-colors duration-300">Listing</a>
            <a href="/add-property" class="hover:text-[var(--primary)] transition-colors duration-300">Add Property</a>
            <a href="/agencies" class="hover:text-[var(--primary)] transition-colors duration-300">Agencies</a>
            <a href="/blog" class="hover:text-[var(--primary)] transition-colors duration-300">Blog</a>
        </div>

        <!-- Social Icons -->
        <div class="flex gap-3 items-center text-lg">
            {{#if setting.facebook_url}}
                <a href="{{setting.facebook_url}}" class="w-9 h-9 flex items-center justify-center rounded-full border border-gray-600 text-gray-300 hover:bg-[var(--primary)] hover:text-white transition">
                    <i class="bi bi-facebook"></i>
                </a>
            {{/if}}
            {{#if setting.whatsapp_number}}
                <a href="tel:{{setting.whatsapp_number}}" class="w-9 h-9 flex items-center justify-center rounded-full border border-gray-600 text-gray-300 hover:bg-[var(--primary)] hover:text-white transition">
                    <i class="bi bi-whatsapp"></i>
                </a>
            {{/if}}
            {{#if setting.linkedin_url}}
                <a href="{{setting.linkedin_url}}" class="w-9 h-9 flex items-center justify-center rounded-full border border-gray-600 text-gray-300 hover:bg-[var(--primary)] hover:text-white transition">
                    <i class="bi bi-linkedin"></i>
                </a>
            {{/if}}
            {{#if setting.instagram_url}}
                <a href="{{setting.instagram_url}}" class="w-9 h-9 flex items-center justify-center rounded-full border border-gray-600 text-gray-300 hover:bg-[var(--primary)] hover:text-white transition">
                    <i class="bi bi-instagram"></i>
                </a>
            {{/if}}
        </div>
    </div>

    <!-- Copyright -->
    <div class="border-t border-gray-700 text-center text-sm text-gray-400 mt-6 pt-4">
        © 2025
        <span class="font-semibold text-white transition duration-300 hover:text-[var(--primary)] hover:scale-105 inline-block">
            <a href="/" class="hover:text-[var(--primary)]">Metraj.az - Sənin əmlakın</a>
        </span>.
        Designed & Developed by
        <a href="https://foxsoft.agency" target="_blank" class="text-gray-400 hover:text-[var(--primary)] transition duration-300 hover:scale-105 inline-block">
            FoxSoft
        </a>
    </div>
</footer>
