{{#ifNo isProduction}}
<div id="loadTimer" style="
        position: fixed;
        bottom: 10px;
        right: 10px;
        background: rgba(0,0,0,0.7);
        color: white;
        padding: 5px 10px;
        border-radius: 6px;
        font-family: sans-serif;
        font-size: 13px;
        z-index: 9999;
  ">
    Loading
</div>
{{/ifNo}}

<div class="bg-[#2C2E33] px-6 py-6 mt-8 text-white border-b border-[#3a3a3d]">
    <div class="max-w-7xl mx-auto flex flex-col md:flex-row lg:justify-between lg:items-center gap-6">

        <div class="flex items-center gap-3">
            <a href="/" class="cursor-pointer flex lg:items-center space-x-3">
                <img class="h-9 w-auto object-contain" src="/images/metrajlogo1-remove.png" alt="sekil" />
                <div class="leading-tight">
                    <div class="text-md font-extrabold text-[#a7a5a5] tracking-tight">Metraj.az</div>
                    <div class="text-[8px] text-gray-400 underline underline-offset-4 uppercase tracking-[0.2em]">sənin
                        əmlakın</div>
                </div>
            </a>
        </div>

        <div class="flex items-center gap-6">
            <div class="flex items-center gap-3 border-r border-[#3B3D41] pr-6">
                <i class="bi bi-telephone text-[#F7923A] text-xl"></i>
                <div>
                    <p class="text-sm text-gray-400">Call us</p>
                    {{#if setting.phone}}
                    <p class="font-semibold text-white text-[15px]">{{setting.phone}}</p>
                    {{/if}}
                </div>
            </div>

            <div class="flex items-center gap-3">
                <i class="bi bi-envelope text-[#F7923A] text-xl"></i>
                <div>
                    <p class="text-sm text-gray-400">Need live help</p>
                    {{#if setting.email}}
                    <p class="font-semibold text-white text-[15px]">{{setting.email}}</p>
                    {{/if}}
                </div>
            </div>
        </div>

    </div>
</div>



